<%= form_for(@game) do |f| %>
    <div>
        <%= f.label :name %>
        <%= f.text_field :name %><br>
    </div>
    <div>
        <%= f.label :description %>
        <%= f.text_field :description %><br>
    </div>

    <p> Select a Console that already exists: </p>
    <div>
        <%= f.collection_select :console_id, Console.all, :id, :name, include_blank: 'Select One' %>
    </div>
    
    <p> Or create a new Console: </p>
    <div>
        <%= f.fields_for :console do |c| %>
            <%= c.label :name %>
            <%= c.text_field :name %>
        <% end %>
    </div>
    <br>
    <%= f.submit %>
<% end %>

